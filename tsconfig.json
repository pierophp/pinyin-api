{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext"],
      "alwaysStrict": true,
      "strict": true,
      "noEmitOnError": true,
      "moduleResolution": "node",
      "outDir": "tscOutDir",
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "allowJs": true,
      "types": ["@cloudflare/workers-types", "node", "jest"]
    },
    "include": ["src/**/*", "src/types", "index.ts"],
    "exclude": ["node_modules", "dist"]
  }